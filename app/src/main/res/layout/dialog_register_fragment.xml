<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="userModel"
            type="com.example.taskassignment.model.UserModel" />

        <variable
            name="viewModel"
            type="com.example.taskassignment.viewModel.DialogViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dimes_300dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_orange"
                android:padding="@dimen/dimes_16dp"
                android:text="@{title}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimes_16sp"
                tools:ignore="MissingConstraints" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/actv_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">
                        ​

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimes_16dp"
                            android:layout_marginStart="@dimen/dimes_30dp"
                            android:text="@string/name"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:translationZ="@dimen/dimes_8dp" />
                        ​

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimes_5dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="@dimen/dimes_5dp"
                            android:layout_marginBottom="@dimen/dimes_5dp"
                            app:cardCornerRadius="@dimen/dimes_5dp"
                            app:cardElevation="@dimen/dimes_5dp"
                            app:layout_constraintTop_toTopOf="parent">
                            ​

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/actv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/zxing_transparent"
                                android:hint="@string/enter_name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:padding="@dimen/dimes_16dp"
                                android:text="@={userModel.name}"
                                android:textSize="15sp" />
                            ​
                        </androidx.cardview.widget.CardView>
                        ​
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/name">
                        ​

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimes_16dp"
                            android:layout_marginStart="@dimen/dimes_30dp"
                            android:text="@string/email"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:translationZ="@dimen/dimes_8dp" />
                        ​

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimes_5dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="@dimen/dimes_5dp"
                            android:layout_marginBottom="@dimen/dimes_5dp"
                            app:cardCornerRadius="@dimen/dimes_5dp"
                            app:cardElevation="@dimen/dimes_5dp"
                            app:layout_constraintTop_toTopOf="parent">
                            ​

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/actv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/zxing_transparent"
                                android:hint="@string/enter_email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLength="50"
                                android:padding="@dimen/dimes_16dp"
                                android:text="@={userModel.email}"
                                android:textSize="15sp" />
                            ​
                        </androidx.cardview.widget.CardView>
                        ​
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/email">
                        ​

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimes_16dp"
                            android:layout_marginStart="@dimen/dimes_30dp"
                            android:text="@string/mobile"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:translationZ="@dimen/dimes_8dp" />
                        ​

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimes_5dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="@dimen/dimes_5dp"
                            android:layout_marginBottom="@dimen/dimes_5dp"
                            app:cardCornerRadius="@dimen/dimes_5dp"
                            app:cardElevation="@dimen/dimes_5dp"
                            app:layout_constraintTop_toTopOf="parent">
                            ​

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/actv_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/zxing_transparent"
                                android:hint="@string/mobile_hint"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="@dimen/dimes_16dp"
                                android:text="@={userModel.mobileNumber}"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>
                        ​
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dateofbirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dimes_5dp"
                        app:layout_constraintTop_toBottomOf="@id/mobile">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimes_16dp"
                            android:layout_marginStart="@dimen/dimes_30dp"
                            android:text="date of birth"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:translationZ="@dimen/dimes_8dp" />
                        ​

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimes_5dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="@dimen/dimes_5dp"
                            android:layout_marginBottom="@dimen/dimes_5dp"
                            android:padding="@dimen/dimes_20dp"
                            app:cardCornerRadius="@dimen/dimes_5dp"
                            app:cardElevation="@dimen/dimes_5dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/date_picker_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimes_5dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/acet_dateofbirth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Select Date"
                                    android:imeOptions="actionNext"
                                    android:padding="@dimen/dimes_12dp"
                                    android:text="@{userModel.dateOfBirth}"
                                    android:textSize="@dimen/dimes_16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/image_calender"
                                    app:layout_constraintHorizontal_weight="1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_calender"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:padding="@dimen/dimes_5dp"
                                    android:src="@drawable/ic_calendar_2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_weight=".5"
                                    app:layout_constraintStart_toEndOf="@id/acet_dateofbirth"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            ​ ​
                        </androidx.cardview.widget.CardView>
                        ​
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dimes_5dp"
                        app:layout_constraintTop_toBottomOf="@id/dateofbirth">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimes_16dp"
                            android:layout_marginStart="@dimen/dimes_30dp"
                            android:text="@string/address"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:translationZ="@dimen/dimes_8dp" />
                        ​

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimes_5dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="@dimen/dimes_5dp"
                            android:layout_marginBottom="@dimen/dimes_5dp"
                            android:padding="@dimen/dimes_20dp"
                            app:cardCornerRadius="@dimen/dimes_5dp"
                            app:cardElevation="@dimen/dimes_5dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/address_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimes_5dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/acet_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/enter_address"
                                    android:imeOptions="actionNext"
                                    android:padding="@dimen/dimes_12dp"
                                    android:text="@{userModel.address}"
                                    android:textSize="@dimen/dimes_16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/image_address"
                                    app:layout_constraintHorizontal_weight="1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_address"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:padding="@dimen/dimes_5dp"
                                    android:src="@drawable/ic_place_black_24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_weight=".5"
                                    app:layout_constraintStart_toEndOf="@id/acet_address"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            ​ ​
                        </androidx.cardview.widget.CardView>
                        ​
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/actv_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:layout_marginBottom="@dimen/dimes_16dp"
                        android:background="@drawable/next_button_background"
                        android:clickable="true"
                        android:elevation="@dimen/dimes_32dp"
                        android:onClick="@{() -> viewModel.onClickRegister()}"
                        android:padding="@dimen/dimes_12dp"
                        android:text="@string/sign_up"
                        android:textAlignment="center"
                        android:textSize="@dimen/dimes_16sp"
                        android:translationZ="@dimen/dimes_5dp"
                        app:layout_constraintTop_toBottomOf="@+id/location" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/actv_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimes_16dp"
                        android:layout_marginTop="@dimen/dimes_16dp"
                        android:layout_marginEnd="@dimen/dimes_16dp"
                        android:layout_marginBottom="@dimen/dimes_70dp"
                        android:background="@drawable/cancel"
                        android:clickable="true"
                        android:elevation="@dimen/dimes_32dp"
                        android:padding="@dimen/dimes_12dp"
                        android:text="@string/cancel"
                        android:textAlignment="center"
                        android:textSize="@dimen/dimes_16sp"
                        android:translationZ="@dimen/dimes_5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/actv_register" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>