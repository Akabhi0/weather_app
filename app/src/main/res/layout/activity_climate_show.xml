<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        tools:context=".view.MainActivity">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:alpha="0.5"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/actv_desprition" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="120dp"
            android:padding="8dp"
            android:src="@drawable/forward"
            app:layout_constraintBottom_toBottomOf="@+id/actv_city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actv_city"
            app:layout_constraintTop_toTopOf="@+id/actv_city" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_weather_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:src="@drawable/ic_cloud_computing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aciv_forward" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_icon_mon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:src="@drawable/ic_cloud_computing"
            app:layout_constraintEnd_toStartOf="@+id/aciv_icon_tue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actv_mon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_icon_tue"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:src="@drawable/ic_cloud_computing"
            app:layout_constraintEnd_toStartOf="@+id/aciv_icon_wes"
            app:layout_constraintStart_toEndOf="@+id/aciv_icon_mon"
            app:layout_constraintTop_toBottomOf="@+id/actv_mon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_icon_wes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:src="@drawable/ic_cloud_computing"
            app:layout_constraintEnd_toStartOf="@+id/aciv_icon_thu"
            app:layout_constraintStart_toEndOf="@+id/aciv_icon_tue"
            app:layout_constraintTop_toBottomOf="@+id/actv_mon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_icon_thu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:src="@drawable/ic_cloud_computing"
            app:layout_constraintEnd_toStartOf="@+id/aciv_icon_fri"
            app:layout_constraintStart_toEndOf="@+id/aciv_icon_wes"
            app:layout_constraintTop_toBottomOf="@+id/actv_mon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_icon_fri"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:padding="10dp"
            android:src="@drawable/ic_cloud_computing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/aciv_icon_thu"
            app:layout_constraintTop_toBottomOf="@+id/actv_mon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="roboto"
            android:text="@{weatherModel.name}"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/aciv_forward"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@{temp}"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aciv_weather_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:padding="12dp"
            android:text="@{tempMin}"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/actv_max"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actv_temp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:padding="12dp"
            android:text="@{tempMax}"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actv_min"
            app:layout_constraintTop_toBottomOf="@+id/actv_temp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_discription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:padding="12dp"
            android:text="@{tempMax}"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actv_min"
            app:layout_constraintTop_toBottomOf="@+id/actv_temp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_desprition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="5dp"
            android:text="@{weather.description}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@+id/actv_discription" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_tue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_tue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_wes"
            app:layout_constraintStart_toEndOf="@+id/actv_mon"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_wes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_thus"
            app:layout_constraintStart_toEndOf="@+id/actv_tue"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_thus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_fri"
            app:layout_constraintStart_toEndOf="@+id/actv_wes"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_fri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actv_thus"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_mon_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_tue_temp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aciv_icon_fri" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_tue_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_wes_temp"
            app:layout_constraintStart_toEndOf="@+id/actv_mon_temp"
            app:layout_constraintTop_toBottomOf="@+id/aciv_icon_fri" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_wes_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_thus_temp"
            app:layout_constraintStart_toEndOf="@+id/actv_tue_temp"
            app:layout_constraintTop_toBottomOf="@+id/aciv_icon_fri" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_thus_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/actv_fri_temp"
            app:layout_constraintStart_toEndOf="@+id/actv_wes_temp"
            app:layout_constraintTop_toBottomOf="@+id/aciv_icon_fri" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_fri_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actv_thus_temp"
            app:layout_constraintTop_toBottomOf="@+id/aciv_icon_fri" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="temp"
            type="String" />


        <variable
            name="tempMin"
            type="String" />


        <variable
            name="tempMax"
            type="String" />


        <variable
            name="forecastModel"
            type="com.example.task.model.ForeCasteMain" />

        <variable
            name="weatherModel"
            type="com.example.task.model.WeatherMain" />

        <variable
            name="weather"
            type="com.example.task.model.WeatherModel" />
    </data>
</layout>